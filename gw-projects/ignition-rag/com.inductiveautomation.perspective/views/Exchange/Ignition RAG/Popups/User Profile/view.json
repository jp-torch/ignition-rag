{
  "custom": {
    "loggedIn": true
  },
  "params": {},
  "propConfig": {
    "custom.loggedIn": {
      "binding": {
        "config": {
          "path": "session.props.auth.authenticated"
        },
        "type": "property"
      },
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 69,
      "width": 146
    }
  },
  "root": {
    "children": [
      {
        "meta": {
          "name": "Label"
        },
        "position": {
          "basis": "32px"
        },
        "propConfig": {
          "props.text": {
            "binding": {
              "config": {
                "expression": "if(isNull({session.props.auth.user.userName}), \"\", {session.props.auth.user.userName})"
              },
              "type": "expr"
            }
          }
        },
        "props": {
          "style": {
            "textAlign": "center"
          }
        },
        "type": "ia.display.label"
      },
      {
        "events": {
          "component": {
            "onActionPerformed": {
              "config": {
                "script": "\tsystem.perspective.login()"
              },
              "scope": "G",
              "type": "script"
            }
          }
        },
        "meta": {
          "name": "Login Button"
        },
        "position": {
          "basis": "34px"
        },
        "propConfig": {
          "position.display": {
            "binding": {
              "config": {
                "expression": "!{view.custom.loggedIn}"
              },
              "type": "expr"
            }
          }
        },
        "props": {
          "style": {
            "classes": "ignition-rag/login-button"
          },
          "text": "Login"
        },
        "type": "ia.input.button"
      },
      {
        "events": {
          "component": {
            "onActionPerformed": {
              "config": {
                "script": "\tsystem.perspective.logout()"
              },
              "scope": "G",
              "type": "script"
            }
          }
        },
        "meta": {
          "name": "Logout Button"
        },
        "position": {
          "basis": "34px"
        },
        "propConfig": {
          "position.display": {
            "binding": {
              "config": {
                "expression": "{view.custom.loggedIn}"
              },
              "type": "expr"
            }
          }
        },
        "props": {
          "style": {
            "classes": "ignition-rag/logout-button"
          },
          "text": "Logout"
        },
        "type": "ia.input.button"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "direction": "column"
    },
    "type": "ia.container.flex"
  }
}