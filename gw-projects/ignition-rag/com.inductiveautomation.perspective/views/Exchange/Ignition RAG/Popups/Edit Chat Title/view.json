{
  "custom": {},
  "params": {
    "chatId": "value"
  },
  "propConfig": {
    "params.chatId": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 152,
      "width": 437
    }
  },
  "root": {
    "children": [
      {
        "meta": {
          "name": "Label"
        },
        "position": {
          "basis": "32px"
        },
        "props": {
          "text": "New Chat Title",
          "textStyle": {
            "textAlign": "center"
          }
        },
        "type": "ia.display.label"
      },
      {
        "meta": {
          "name": "Chat Title Input"
        },
        "position": {
          "basis": "32px"
        },
        "propConfig": {
          "props.text": {
            "binding": {
              "config": {
                "expression": "\"\""
              },
              "type": "expr"
            }
          }
        },
        "props": {
          "style": {
            "classes": "ignition-rag/text-input"
          }
        },
        "type": "ia.input.text-field"
      },
      {
        "children": [
          {
            "events": {
              "component": {
                "onActionPerformed": {
                  "config": {
                    "script": "\tsystem.db.execUpdate(\n\t\t\"Exchange/Ignition RAG/Update Chat Title\", \n\t\t{\"chatId\": self.view.params.chatId, \"chatTitle\": self.parent.parent.getChild(\"Chat Title Input\").props.text}\n\t)\n\tsystem.perspective.closePopup(\"edit-chat-title\")\n\tsystem.perspective.sendMessage(\"ignition-rag-refresh-chat-repeater\", {})"
                  },
                  "scope": "G",
                  "type": "script"
                }
              }
            },
            "meta": {
              "name": "Save Button"
            },
            "position": {
              "basis": "85px"
            },
            "props": {
              "image": {
                "icon": {
                  "path": "material/save"
                }
              },
              "text": "Save"
            },
            "type": "ia.input.button"
          },
          {
            "events": {
              "component": {
                "onActionPerformed": {
                  "config": {
                    "draggable": true,
                    "id": "edit-chat-title",
                    "modal": false,
                    "overlayDismiss": false,
                    "resizable": true,
                    "showCloseIcon": true,
                    "type": "close",
                    "viewPath": "Exchange/Ignition RAG/Popups/Edit Chat Title",
                    "viewportBound": false
                  },
                  "scope": "C",
                  "type": "popup"
                }
              }
            },
            "meta": {
              "name": "Cancel Button"
            },
            "position": {
              "basis": "85px"
            },
            "props": {
              "image": {
                "icon": {
                  "path": "material/close"
                }
              },
              "text": "Cancel"
            },
            "type": "ia.input.button"
          }
        ],
        "meta": {
          "name": "Button Container"
        },
        "position": {
          "basis": "46px"
        },
        "props": {
          "justify": "center",
          "style": {
            "gap": "20px"
          }
        },
        "type": "ia.container.flex"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "direction": "column"
    },
    "type": "ia.container.flex"
  }
}