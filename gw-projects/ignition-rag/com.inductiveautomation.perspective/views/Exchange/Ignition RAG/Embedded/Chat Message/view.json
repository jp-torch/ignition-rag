{
  "custom": {},
  "params": {
    "message": "value",
    "role": "user"
  },
  "propConfig": {
    "params.message": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.role": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 54,
      "width": 309
    }
  },
  "root": {
    "children": [
      {
        "meta": {
          "name": "Spacer Left"
        },
        "position": {
          "basis": "50%",
          "grow": 1
        },
        "propConfig": {
          "position.display": {
            "binding": {
              "config": {
                "expression": "{view.params.role} \u003d \"user\""
              },
              "type": "expr"
            }
          }
        },
        "type": "ia.display.label"
      },
      {
        "meta": {
          "name": "EmbeddedView"
        },
        "position": {
          "basis": "50%",
          "grow": 1
        },
        "propConfig": {
          "props.params.message": {
            "binding": {
              "config": {
                "path": "view.params.message"
              },
              "type": "property"
            }
          },
          "props.path": {
            "binding": {
              "config": {
                "expression": "case(\n\t{view.params.role},\n\t\"system\", \"Exchange/Ignition RAG/Embedded/System Message\",\n\t\"user\", \"Exchange/Ignition RAG/Embedded/User Message\",\n\t\"\"\n)"
              },
              "type": "expr"
            }
          }
        },
        "type": "ia.display.view"
      },
      {
        "meta": {
          "name": "Spacer Right"
        },
        "position": {
          "basis": "50%",
          "grow": 1
        },
        "propConfig": {
          "position.display": {
            "binding": {
              "config": {
                "expression": "{view.params.role} \u003d \"system\""
              },
              "type": "expr"
            }
          }
        },
        "type": "ia.display.label"
      }
    ],
    "meta": {
      "name": "root"
    },
    "type": "ia.container.flex"
  }
}