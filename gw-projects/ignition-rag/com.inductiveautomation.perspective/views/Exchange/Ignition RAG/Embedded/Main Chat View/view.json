        "events": {
          "dom": {
            "onKeyDown": {
              "config": {
                "script": "\tquestion \u003d self.props.text\n\tchatId \u003d self.view.custom.chatId\n\t\n\tif len(question) \u003e 0 and event.key \u003d\u003d \"Enter\":\n\t\tself.getSibling(\"Thinking Label\").position.display \u003d True\n\t\t\n\t\t# Start a new chat\n\t\tif chatId is None:\n\t\t\tchatId \u003d exchange.ignitionRAG.utils.getId()\n\t\t\tself.view.custom.chatId \u003d chatId\n\t\t\tchatTitle \u003d exchange.ignitionRAG.chat.generateChatTitle(question)\n\t\t\tuserId \u003d self.session.props.auth.user.id if self.session.props.auth.user.id else \"\"\n\t\t\t\n\t\t\tparams \u003d {\n\t\t\t\t\"chatId\": chatId,\n\t\t\t\t\"chatTitle\": chatTitle,\n\t\t\t\t\"userId\": userId\n\t\t\t}\n\t\t\tsystem.db.execUpdate(\"Exchange/Ignition RAG/Insert Chat\", params)\n\t\t\tsystem.perspective.sendMessage(\"ignition-rag-refresh-chat-repeater\", {})\n\t\t\n\t\t# Insert the user message\n\t\tmessageId \u003d exchange.ignitionRAG.utils.getId()\n\t\tparams \u003d {\n\t\t\t\"messageId\": messageId,\n\t\t\t\"chatId\": chatId,\n\t\t\t\"message\": question,\n\t\t\t\"role\": \"user\"\n\t\t}\n\t\tsystem.db.execUpdate(\"Exchange/Ignition RAG/Insert Message\", params)\n\t\tself.getSibling(\"Chat History\").refreshBinding(\"props.instances\")\n\t\tself.props.text \u003d \"\"\n\t\t\n\t\t# Get the answer\n\t\tanswer \u003d exchange.ignitionRAG.rag.generateAnswer(question)\n\t\t\n\t\t# Insert the ansewr in the DB\n\t\tmessageId \u003d exchange.ignitionRAG.utils.getId()\n\t\tparams \u003d {\n\t\t\t\"messageId\": messageId,\n\t\t\t\"chatId\": chatId,\n\t\t\t\"message\": answer,\n\t\t\t\"role\": \"system\"\n\t\t}\n\t\tsystem.db.execUpdate(\"Exchange/Ignition RAG/Insert Message\", params)\n\t\tself.getSibling(\"Chat History\").refreshBinding(\"props.instances\")\n\t\t\n\t\tself.getSibling(\"Thinking Label\").position.display \u003d False"
              },
