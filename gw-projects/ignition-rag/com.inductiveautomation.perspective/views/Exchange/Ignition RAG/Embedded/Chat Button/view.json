{
  "custom": {
    "popupId": "Chat Actions - value"
  },
  "params": {
    "chatTitle": "Chat",
    "id": "value",
    "selected": false
  },
  "propConfig": {
    "custom.popupId": {
      "binding": {
        "config": {
          "expression": "\"Chat Actions - \" + {view.params.id}"
        },
        "type": "expr"
      },
      "persistent": true
    },
    "params.chatTitle": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.id": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.selected": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 51
    }
  },
  "root": {
    "children": [
      {
        "events": {
          "component": {
            "onActionPerformed": {
              "config": {
                "script": "\tsystem.perspective.navigate(\"/chat/%s\" % self.view.params.id)\n\tsystem.perspective.sendMessage(\"ignition-rag-select-chat\", {\"chatId\": self.view.params.id})"
              },
              "scope": "G",
              "type": "script"
            }
          }
        },
        "meta": {
          "name": "Chat Button"
        },
        "position": {
          "grow": 1
        },
        "propConfig": {
          "props.text": {
            "binding": {
              "config": {
                "path": "view.params.chatTitle"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "style": {
            "classes": "ignition-rag/side-menu-button"
          }
        },
        "type": "ia.input.button"
      },
      {
        "events": {
          "component": {
            "onActionPerformed": {
              "config": {
                "draggable": false,
                "id": "{view.custom.popupId}",
                "modal": false,
                "overlayDismiss": false,
                "position": {
                  "relativeLocation": "bottom"
                },
                "positionType": "relative",
                "resizable": false,
                "showCloseIcon": true,
                "type": "open",
                "viewParams": {
                  "chatId": "{view.params.id}",
                  "popupId": "{view.custom.popupId}"
                },
                "viewPath": "Exchange/Ignition RAG/Popups/Chat Actions",
                "viewportBound": false
              },
              "scope": "C",
              "type": "popup"
            }
          }
        },
        "meta": {
          "name": "Actions Button"
        },
        "position": {
          "basis": "80px"
        },
        "props": {
          "image": {
            "icon": {
              "path": "material/more_horiz"
            }
          },
          "style": {
            "classes": "ignition-rag/side-menu-button"
          },
          "text": ""
        },
        "type": "ia.input.button"
      }
    ],
    "meta": {
      "name": "root"
    },
    "propConfig": {
      "props.style.backgroundColor": {
        "binding": {
          "config": {
            "expression": "if({view.params.selected}, \"var(--neutral-50)\", \"\")"
          },
          "type": "expr"
        }
      }
    },
    "type": "ia.container.flex"
  }
}